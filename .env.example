OPENAI_API_KEY=
# Embeddings
EMBEDDING_MODEL=text-embedding-3-large

# GPT Q/A generation
USE_GPT_QA=true
GPT_MODEL=gpt-4o-mini

# Chunking configuration
MAX_CHUNK_TOKENS=700
OVERLAP_TOKENS=100

# Qdrant local (embedded)
QDRANT_PATH=./qdrant_data
QDRANT_COLLECTION=documents

# Qdrant remote (optional)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# Feature toggles
# Hide Ask (RAG) in UI and return sources-only from /api/answer when disabled
EXPOSE_ASK=true

# RAG defaults
RAG_K=5
RAG_MAX_CONTEXT_TOKENS=1600
